<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-configuration PUBLIC
"-//Hibernate/Hibernate Configuration DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
	<session-factory>
		<property name="hibernate.bytecode.use_reflection_optimizer">false</property>
		<property name="hibernate.connection.driver_class">org.postgresql.Driver</property>
		<property name="hibernate.connection.password">root</property>
		<property name="hibernate.connection.url">jdbc:postgresql://127.0.0.1:5432/ACREDITACIONES</property>
		<property name="hibernate.connection.username">root</property>
		<property name="hibernate.dialect">org.hibernate.dialect.PostgreSQLDialect</property>
		

		<!-- Manejo de session con JDBC -->
		<property name="transaction.factory_class">org.hibernate.transaction.JDBCTransactionFactory</property>
		
		<!--
		Le permite a Hibernate crear la sessiones automaticamentes
		-->
		<property name="current_session_context_class">thread</property>
		
		<!-- Para que nos muestre las sentencias SQL -->
		<property name="hibernate.show_sql">true</property>

		<!--  Mapeo de los beans -->
		<mapping resource="aeeventos/core/hbm/Asistente.hbm.xml" />
		<mapping resource="aeeventos/core/hbm/Usuario.hbm.xml" />
		<mapping resource="aeeventos/core/hbm/Acreditacion.hbm.xml" />
		<mapping resource="aeeventos/core/hbm/Evento.hbm.xml" />
	</session-factory>
</hibernate-configuration>
